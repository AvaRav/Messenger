<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin_top"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/block_received_voice_message"
        android:layout_width="@dimen/message_voice_weight"
        android:layout_height="@dimen/message_voice_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_receiving_message">

        <ImageView
            android:id="@+id/chat_received_btn_play"
            android:layout_width="@dimen/voice_btn_size"
            android:layout_height="@dimen/voice_btn_size"
            android:src="@drawable/ic_receiver_play"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/chat_received_btn_pause"
            android:layout_width="@dimen/voice_btn_size"
            android:layout_height="@dimen/voice_btn_size"
            android:src="@drawable/ic_receiver_pause"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/chat_received_voice_message_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="19:00"
            android:textColor="@color/accent"
            android:gravity="end"
            android:layout_marginEnd="@dimen/default_margin_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/block_user_voice_message"
        android:layout_width="@dimen/message_voice_weight"
        android:layout_height="@dimen/message_voice_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_user_message">

        <ImageView
            android:id="@+id/chat_user_btn_play"
            android:layout_width="@dimen/voice_btn_size"
            android:layout_height="@dimen/voice_btn_size"
            android:src="@drawable/ic_user_play"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/chat_user_btn_pause"
            android:layout_width="@dimen/voice_btn_size"
            android:layout_height="@dimen/voice_btn_size"
            android:src="@drawable/ic_user_pause"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/chat_user_voice_message_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="19:00"
            android:textColor="@color/accent"
            android:gravity="end"
            android:layout_marginEnd="@dimen/default_margin_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>