<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="name_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/default_margin_top</item>
        <item name="android:textColor">@color/colorNameText</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="online_offline_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:textColor">@color/colorNameText</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="main_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorFocusedText</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/large_margin_top</item>
    </style>

    <style name="settings_button_style">
        <item name="android:layout_marginTop">@dimen/default_margin_top</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:focusable">true</item>

    </style>

    <style name="normal_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
    </style>

    <style name="additional_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/little_text_size</item>
        <item name="android:textColor">@color/colorAdditionalText</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/little_margin_top</item>
    </style>

    <style name="separator_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separator_height</item>
        <item name="android:background">@color/colorFocusedText</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/default_margin_top</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@drawable/toolbar</item>
<!--        <item name="android:elevation">4dp</item>-->
    </style>

    <style name="info_icon_style">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">@dimen/icon_info_width</item>
        <item name="android:layout_height">@dimen/icon_info_width</item>
        <item name="android:layout_margin">@dimen/horizontal_margin</item>
    </style>

    <style name="main_icon_style">
        <item name="android:layout_width">@dimen/width_main_icon</item>
        <item name="android:layout_height">@dimen/height_main_icon</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/large_margin_top</item>
    </style>

    <style name="SalusLink_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/large_margin_top</item>
        <item name="android:fontFamily">@font/inder</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_text</item>
    </style>

    <style name="registration_edit_text_style">
        <item name="android:layout_width">@dimen/default_edit_text_width</item>
        <item name="android:layout_height">@dimen/default_edit_text_height</item>
        <item name="android:layout_gravity">center_horizontal</item>

        <item name="android:background">@drawable/enter_text</item>
        <item name="android:ems">10</item>
        <item name="android:paddingStart">@dimen/default_edit_text_padding_start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/registration_text_size</item>
    </style>

    <style name="registration_button_style">
        <item name="android:layout_width">@dimen/registration_button_width</item>
        <item name="android:layout_height">@dimen/registration_button_height</item>
        <item name="android:layout_marginTop">@dimen/super_large_margin_top</item>
        <item name="android:alpha">0.5</item>
        <item name="android:background">@drawable/button_style</item>
    </style>

    <style name="registration_button_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/registration_text_size</item>
    </style>

    <style name="app_edit_text_style" parent="registration_edit_text_style">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">@dimen/default_margin_top</item>
    </style>

    <style name="app_button_style" parent="registration_button_style">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:contentDescription">Кнопка изменения имени и фамилии</item>
    </style>

    <style name="app_button_text_style" parent="registration_button_text_style">
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>
</resources>