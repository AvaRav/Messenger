<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="name_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/default_margin_top</item>
        <item name="android:textColor">@color/colorNameText</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="online_offline_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:textColor">@color/colorNameText</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="main_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorFocusedText</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/large_margin_top</item>
    </style>

    <style name="settings_button_style">
        <item name="android:layout_marginTop">@dimen/default_margin_top</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:focusable">true</item>

    </style>

    <style name="normal_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
    </style>

    <style name="additional_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/little_text_size</item>
        <item name="android:textColor">@color/colorAdditionalText</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/little_margin_top</item>
    </style>

    <style name="separator_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separator_height</item>
        <item name="android:background">@color/colorFocusedText</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/default_margin_top</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@drawable/toolbar</item>
<!--        <item name="android:elevation">4dp</item>-->
    </style>
</resources>